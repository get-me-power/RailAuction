<div>
  <%= link_to("back", "/posts/index") %>
</div>

<br>
<div>
  <b>商品名</b>
  <br>
  <%= @post.product_name %>
  </p>

  <p>
    <b>価格</b>
    <br>
    <%= @post.price %>円
  </p>

  <p>
    <b>概要</b>
    <br>
    <%= @post.content %>
  </p>
  <p>残り時間</p>
    <br>
    <%= @post.endTime %>
    </p>
  <p>
    <b>画像</b>
    <br>
    <img src="<%= "/posts_images/#{@post.picture}" %>" >
</div>
<% if @current_user.id == @post.user_id %>
  <div>
    <%= link_to("/posts/#{@post.id}/edit") do %>
      <div>
        編集
      </div>
    <% end %>
    <%= link_to("/posts/#{@post.id}/destroy", {method: "post"}) do %>
      <div>
        削除
      </div>
    <% end %>
  </div>
  <% elsif Time.zone.now < @post.endTime %>
    <%= link_to("/auctions/#{@post.id}/new") do %>
        <div>
            入札する
        </div>
    <% end %>
  <% else %>
    <p>オークション期間が終了しました</p>
  <% end %>

<% if @auctions.first != nil %>
    <h4>現在の最高価格 <%= @auctions.first.suggested_price %>円 </h4>
<% end %>
<p>入札一覧</p>
<% @auctions.each do |auction| %>
    <%= auction.user.name %>
    <%= auction.suggested_price %>
    <%= link_to("/auctions/#{auction.id}") do %>
        <div>
            詳細
        </div>
    <% end %>
    <br>
<% end %>
<%= @post.endTime.class %>
