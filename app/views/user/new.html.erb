<%= form_for(@user, :url => {:action => :create, :controller => :user}) do |f| %> 
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :パスワード %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>
    <% end %>
